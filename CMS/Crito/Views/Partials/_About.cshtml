@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models


<!-- About Section -->
    <section class="about-section">
        <div class="container">
                <div class="img-part">
                     @{
                        var aboutCompanyImage = Model.Value<MediaWithCrops>("aboutCompanyImage");
                        if (aboutCompanyImage != null)
                        {
                            <img src="@aboutCompanyImage.MediaUrl()" alt="">
                        }
                    }
                    <div class="quote">
                        <h4>@Model.Value("aboutCompanyBlueNoteName"), <span>@Model.Value("aboutCompanyBlueNotePosition")</span></h4>
                        <p>"@Model.Value("aboutCompanyBlueNoteDescription")"</p>
                    </div>
                </div>
                <div class="content-part">
                    <div class="section-title">
                        <p>@Model.Value("aboutCompanyTitle")</p>
                        <h2>@Model.Value("aboutCompanyHeading") </h2>
                    </div>
                    <p>@Model.Value("aboutCompanyParagraph1")</p>
                    <p>@Model.Value("aboutCompanyParagraph2")</p>
                    <div class="about-btn">
                        <a class="black-btn" href="@Model.Value("aboutCompanyBtnUrl")">@Model.Value("aboutCompanyBtnText") <i class="fa-light fa-arrow-up-right"></i></a>
                        <a class="btn-play" href="Introvideo.html"><i class="fa-regular fa-circle-play"></i> Intro Video</a>
                    </div>
                </div>
        </div>
    </section>